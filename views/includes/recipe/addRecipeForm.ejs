<form action="/recipes/add-recipes" method="POST" class="add-recipe-form">
    <div class="form-group">
        <label for="title">Recipe Title</label>
        <input 
            type="text" 
            id="title" 
            name="title" 
            required 
            class="input-field"
            placeholder="Enter the recipe title" 
        >
    </div>
    
    <div class="form-group">
        <label for="description">Description</label>
        <textarea 
            id="description" 
            name="description" 
            required 
            class="input-field" 
            rows="4" 
            placeholder="Enter a brief description of the recipe (max 500 characters)" 
            maxlength="500"  
        ></textarea>
    </div>

    <div class="form-group">
        <label for="ingredients">Ingredients</label>
        <textarea 
            id="ingredients" 
            name="ingredients" 
            required 
            class="input-field" 
            rows="4" 
            placeholder="List the ingredients (separate each with a comma)" 
        ></textarea>
    </div>

    <div class="form-group">
        <label for="img">Image URL</label>
        <input 
            type="text" 
            id="img" 
            name="img" 
            class="input-field"
            placeholder="Enter the image URL" 
        >
    </div>



    <button 
        type="submit" 
        class="submit-button"
    >
        Add Recipe
    </button>
</form>

<button class="button">
    <a href="/recipes">Back to Recipe List</a>
</button>

