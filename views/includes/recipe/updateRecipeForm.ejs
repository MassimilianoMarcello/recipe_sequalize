<form action="/recipes/update-recipe/<%= recipe.id %>?_method=PUT" method="POST" class="update-recipe-form">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= recipe.title %>" required>
    
    <label for="description">Description:</label>
    <textarea id="description" name="description" required><%= recipe.description %></textarea>

    <label for="ingredients">Ingredients:</label>
    <textarea id="ingredients" name="ingredients" required><%= recipe.ingredients %></textarea>

    <label for="img">Image URL:</label>
    <input type="text" id="img" name="img" value="<%= recipe.img %>">

    <button type="submit">Update Recipe</button>
</form>

<button class="retour-button mt-4">
    <a href="/recipes/recipes">Back to Recipes List</a>
</button>


